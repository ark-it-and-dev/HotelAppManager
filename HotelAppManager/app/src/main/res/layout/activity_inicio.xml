<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.metodista.hotelappmanager.activities.Inicio"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/home_background">

    <Button
        android:id="@+id/btnNovoUsuario"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="@string/novo_usuario"
        android:background="@drawable/botao_background"/>

    <Button
        android:id="@+id/btnNovoProduto"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:text="@string/novo_produto"
        android:background="@drawable/botao_background"/>

    <Button
        android:id="@+id/btnNovoPedido"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:text="@string/novo_pedido"
        android:background="@drawable/botao_background"/>

</LinearLayout>
