<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.metodista.hotelappmanager.activities.NovoPedido"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione o UsuÃ¡rio:"
        android:textSize="@dimen/tamanho_texto_textview"
        android:textColor="@android:color/holo_orange_light"/>

    <Spinner
        android:id="@+id/spinnerUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione o Produto:"
        android:layout_marginTop="35dp"
        android:textSize="@dimen/tamanho_texto_textview"
        android:textColor="@android:color/holo_orange_light"/>

    <Spinner
        android:id="@+id/spinnerProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"/>

    <Button
        android:id="@+id/btnGravarPedido"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Salvar Pedido"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/botao_background"
        android:textSize="20dp"/>

</LinearLayout>
